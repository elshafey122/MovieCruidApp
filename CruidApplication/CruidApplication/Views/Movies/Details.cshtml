@model Film
@{
    ViewData["Title"] = Model.Title;
}
<div class="row justify-content-between">
    <div class="col-md-3 mt-md-5">
        <img class="img-thumbnail" src="Data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" />
    </div>
    <div class="col-md-7 mt-md-5">

        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
            <span class="text-muted"> @Model.Rate.ToString("0.0")</span>
            </span>
        </div>

        <span class="text-muted m-1">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>

        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Genre.Name
        </span>

        <p class="text-justify mt-3">@Model.StoreLine</p>

    </div>

</div>